{
  "name": "seismic-frontend",
  "version": "1.0.0",
  "description": "The client-side code of Seismic Map, an interactive visualization of seismic events",
  "config": {
    "build": "./dist/",
    "remote": "web@seismic.localhorst.io:~/project"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build": "npm-run-all clean build:webpack",
    "dev": "NODE_ENV=development npm start",
    "start": "node devServer.js",
    "lint": "eslint src",
    "rsync": "rsync -az --force --delete --progress $npm_package_config_build $npm_package_config_remote",
    "deploy": "npm-run-all build rsync"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsaiDavid/simple-redux-boilerplate.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/tsaiDavid/simple-redux-boilerplate",
  "devDependencies": {
    "babel-core": "^6.3.15",
    "babel-eslint": "^5.0.0-beta4",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.0",
    "copy-webpack-plugin": "^1.1.1",
    "cross-env": "^1.0.6",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^4.0.0",
    "eslint-plugin-babel": "^3.0.0",
    "eslint-plugin-react": "^3.16.1",
    "eventsource-polyfill": "^0.9.6",
    "express": "^4.13.3",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "node-sass": "^3.4.2",
    "npm-run-all": "^1.5.1",
    "redux-logger": "^2.4.0",
    "rimraf": "^2.4.3",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0",
    "worker-loader": "^0.7.0"
  },
  "dependencies": {
    "bulma": "0.0.4",
    "d3": "^3.5.14",
    "glslify-loader": "^1.0.2",
    "leaflet": "^0.7.7",
    "leaflet-control-window": "git+https://github.com/mapshakers/leaflet-control-window.git",
    "leaflet-geocoder-mapzen": "^1.4.1",
