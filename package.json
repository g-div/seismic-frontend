    "leaflet.locatecontrol": "^0.47.0",
    "mapbox-gl": "^0.13.1",
    "mapbox-gl-leaflet": "git+https://github.com/g-div/mapbox-gl-leaflet.git",
    "raw-loader": "^0.5.1",
    "react": "^0.14.3",
    "react-burger-menu": "^1.5.0",
    "react-custom-scrollbars": "^2.2.2",
    "react-dom": "^0.14.3",
    "react-flipcard": "^0.2.1",
    "react-icons": "^1.0.3",
    "react-ink": "^5.0.2",
    "react-list": "^0.7.13",
    "react-redux": "^4.1.1",
    "react-stockcharts": "^0.3.1",
    "react-svg-morph": "^0.1.3",
